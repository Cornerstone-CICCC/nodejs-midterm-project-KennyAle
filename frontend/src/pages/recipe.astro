---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import AddRecipe from "../components/AddRecipe.astro";
---

<Layout>
  <main class="font-display">
    <div class="container mx-[auto] w-11/12">
      <div class="header flex justify-between items-center">
        <h2 class="opacity-50 font-semibold">Hi! Kenny</h2>
        <div class="header-btns flex">
          <img
            class="rounded-full p-2 shadow-[0px_0px_3px_0px_rgba(0,_0,_0,_0.1)]"
            src="https://placehold.co/30x30"
            alt=""
          />
          <img
            class="rounded-full p-2 shadow-[0px_0px_3px_0px_rgba(0,_0,_0,_0.1)]"
            src="https://placehold.co/30x30"
            alt=""
          />
        </div>
      </div>
      <div class="home-body w-full flex flex-col gap-3.5 rounded-lg p-1">
        <img
          class="w-full rounded-lg"
          src="https://placehold.co/150x100"
          alt=""
        />
        <h1 class="text-center">Spice Grilled Chicken With Avocado Salsa</h1>
        <div class="flex flex-col gap-3 recipe-text rounded-lg bg-gray-100 px-4 py-3">
          <div class="flex">
            <h3 class="w-1/2 py-2">Ingredients List</h3>
            <h3
              class="text-center w-1/2 text-blue-700 border border-gray-400 hover:bg-white focus:outline-non text-sm rounded-lg py-2"
            >
              Cooking Instructions
            </h3>
          </div>
          <ul class="flex flex-col gap-2">
            <li class="border-2 border-gray-200 text-sm flex items-center gap-2 bg-white rounded-md">
              <img
                class="p-2 rounded-lg"
                src="https://placehold.co/30x30"
                alt=""
              />Chicken Breast - 2 pieces
            </li>
            <li class="border-2 border-gray-200 text-sm flex items-center gap-2 bg-white rounded-md">
              <img
                class="p-2 rounded-lg"
                src="https://placehold.co/30x30"
                alt=""
              />Avocado - 1, diced
            </li>
            <li class="border-2 border-gray-200 text-sm flex items-center gap-2 bg-white rounded-md">
              <img
                class="p-2 rounded-lg"
                src="https://placehold.co/30x30"
                alt=""
              />Lime - 1, juiced
            </li>
            <li class="border-2 border-gray-200 text-sm flex items-center gap-2 bg-white rounded-md">
              <img
                class="p-2 rounded-lg"
                src="https://placehold.co/30x30"
                alt=""
              />Spices: Paprika, Garlic Powder, Salt
            </li>
          </ul>
        </div>
        <div class="recipe-list-btns flex gap-2">
          <button
            class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:outline-non text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"
            >Cook Now</button
          >
          <button
            class="bg-gray-200 border border-gray-300 hover:bg-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
            >Add to List</button
          >
        </div>
      </div>
    </div>
  </main>
  <AddRecipe />
</Layout>

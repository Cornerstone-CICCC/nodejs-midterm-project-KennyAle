---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <main class="bg-blue-100 h-dvh">
    <div
      class="w-full flex flex-col items-center justify-center min-h-[65dvh]"
    >
      <img
        class="w-1/4 rotate-25 absolute top-10 left-20"
        src="https://placehold.co/100x150"
        alt=""
      />
      <img
        class="w-1/4 rotate-355 absolute"
        src="https://placehold.co/100x150"
        alt=""
      />
      <img
        class="w-1/4 rotate-15 absolute top-30 right-20"
        src="https://placehold.co/100x150"
        alt=""
      />
    </div>
    <div class="text flex flex-col gap-6 mx-5">
      <h1 class="text-center text-xl font-bold">Smart Recipes, Just For You!</h1>
      <div class="buttons flex">
        <a
          class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:outline-non font-medium rounded-md text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700"
          href="/login">Login</a
        >
        <a
          class="w-full bg-white hover:bg-blue-800 focus:outline-non font-medium rounded-md text-sm px-5 py-2.5 text-center me-2 mb-2"
          href="/register">Sign up</a
        >
      </div>
    </div>
  </main>
</Layout>
